<div class="banner justify-content-center">
  <div class="banner-content justify-content-center align-items-center">
    <%= image_tag "cocktail1.png", alt: "cocktail", width: '88px', class: 'cocktail-1' %>
    <%= image_tag "cocktail2.png", alt: "cocktail", width: '88px', class: 'cocktail-2' %>
    <%= image_tag "cocktail3.png", alt: "cocktail", width: '88px', class: 'cocktail-3' %>

    <h1>Have a favorite ingredient?</h1>
    <form class="form-inline my-2 my-lg-0 align-middle" action="search">
      <input class="form-control form-input-background form-control-lg mr-sm-2" id="banner-typed-text" type="search" name="q" placeholder="" data-ingredients="<%= @animated_ingredients.to_json %>">
      <button class="btn btn-outline-light btn-lg my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</div>

<div class="container">
  <h1 class="mt-3">Your Cocktails</h1>
  <div class="cards mt-3">
    <% id = 1 %>
    <% def aos_picker(id)
      if id % 3 == 1
      'fade-right'
      elsif id % 3 == 2
        'fade-up'
      else
        'fade-left'
      end
    end %>
    <% @cocktails.each do |cocktail|  %>
      <div class="card-category" id="<%= id %>" data-aos="<%= aos_picker(id) %>" data-aos-duration="1000">
        <h3 class="mt-5"><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
      </div>
      <% id +=1 %>
    <% end %>
  </div>
</div>
