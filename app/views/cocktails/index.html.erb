<div class="banner justify-content-center">
  <div class="banner-content justify-content-center align-items-center">
    <h1>Have a favorite ingredient?</h1>
    <form class="form-inline my-2 my-lg-0 align-middle" action="search">
      <input class="form-control form-input-background form-control-lg mr-sm-2" id="banner-typed-text" type="search" name="q" placeholder="" data-ingredients="<%= @animated_ingredients.to_json %>">
      <button class="btn btn-outline-light btn-lg my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</div>

<div class="container">
  <h1 class="mt-3 index-title">Your Cocktails</h1>
  <div class="cards mt-3">
    <% images = cloudinary_url("Cocktails.json", :type=>"list") %>

    <% @cocktails.each_with_index do |cocktail, idx|  %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card-category" id="<%= cocktail.id %>" data-aos="<%= cocktail.aos_picker(idx) %>" data-aos-duration="1000" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.photo.attached? ? "#{cloudinary_url(cocktail.photo.key)}.jpeg" : "#{asset_path 'default-cocktail.jpg'}" %>);">
          <h3 class="mt-5"><%= cocktail.name %></h3>
          <div class="cocktail-details" id="<%= cocktail.id %>">
            <h4 class="cocktail-count"><i class="<%= cocktail.id %> fas fa-cubes fa-2x" data-counter="<%= cocktail.cubes %>"></i> <%= cocktail.cubes %></h4>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


