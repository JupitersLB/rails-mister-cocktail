<h1>More about your cocktail...</h1>

<h3><%= @cocktail.name %></h3>

<% @doses.each do |dose| %>
  <div class="d-flex">
    <h5><%= dose.ingredient.name %></h5>
    <h5><%= dose.description %></h5>
    <%= link_to 'delete',
                dose_path(dose),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
  </div>
<% end %>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
